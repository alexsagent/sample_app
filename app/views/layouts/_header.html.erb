<header>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to ApplicationHelper::APP_NAME, root_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to ApplicationHelper::HOME_LINK_NAME, root_path %></li>
          <li><%= link_to ApplicationHelper::HELP, help_path %></li>
          <% if signed_in? %>
              <li><%= link_to ApplicationHelper::USERS_LINK_NAME, users_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account
                  <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to ApplicationHelper::PROFILE_MENU_NAME, current_user %></li>
                  <li><%= link_to ApplicationHelper::SETTINGS_MENU_NAME, edit_user_path(current_user) %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to ApplicationHelper::SIGN_OUT_LINK, signout_path %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to ApplicationHelper::SIGN_IN, signin_path %></li>
          <% end %>

        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>

</header>
