<% provide(:title, ApplicationHelper::SIGN_IN) %>
<h1><%= ApplicationHelper::SIGN_IN %></h1>

<div class="row ">
  <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-md-6 col-lg-5">
    <%= form_for(:session, url: sessions_path) do |f| %>


        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit ApplicationHelper::SIGN_IN, class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to ApplicationHelper::SIGN_UP_NOW, signup_path %></p>
  </div>
</div>