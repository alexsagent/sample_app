<% provide(:title, ApplicationHelper::HOME_LINK_NAME) %>

<% if signed_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
    </div>
<% else %>
    <div class="center hero-unit">
      <h1>Welcome to oDistGen App</h1>

      <h2>
        This is the home page for the oDistGen application.
      </h2>

      <%= link_to ApplicationHelper::SIGN_UP_NOW, signup_path,
                  class: "btn btn-large btn-primary" %>
    </div>
<% end %>