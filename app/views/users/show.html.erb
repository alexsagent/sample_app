<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>

  <div class="span8">
    <% if @user.maps.any? %>
        <h3>Maps (<%= @user.maps.count %>)</h3>
        <ol class="maps">
          <%= render @maps %>
        </ol>
        <%= will_paginate @maps %>
    <% end %>
  </div>
</div>